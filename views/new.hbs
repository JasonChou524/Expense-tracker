<form
  action='/records'
  method='POST'
  class='mt-5 d-flex flex-column align-items-center'
>
  <div class='d-flex justify-content-between mb-3'>
    <span class=''>*必填欄位</span>
    <h4 class='ms-4'>請輸入你的支出</h4>
  </div>

  <div class='container' style='max-width: 450px'>
    <div class='row mb-3'>
      <label for='name' class='col-2 col-form-label'>名稱*:</label>
      <input type='text' class='col-10' name='name' id='name' required />
    </div>
    <div class='row mb-3'>
      <label for='date' class='col-2 col-form-label'>日期*:</label>
      <input type='date' class='col-10' name='date' id='date' required />
    </div>
    <div class='row mb-3'>
      <label for='category' class='col-2 col-form-label'>類別*:</label>
      <select name='category' id='category' class='col-10' required>
        <option value=''>選擇類別</option>
        {{#each categorys}}
          <option value='{{this._id}}'>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class='row mb-3'>
      <label for='amount' class='col-2 col-form-label'>金額*:</label>
      <input type='number' class='col-10' name='amount' id='amount' required />
    </div>
    <div class='d-flex justify-content-center mt-4'>
      <button
        type='submit'
        class='btn btn-primary btn-block ms-5'
      >新增支出</button>
    </div>

  </div>

</form>